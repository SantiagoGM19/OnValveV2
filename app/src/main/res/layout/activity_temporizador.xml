<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Temporizador"
    android:background="@color/colorPrimary"
    >
    
    <ProgressBar
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_temporizador2"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/circle_temporizador1"
        android:rotation="-90"
        android:id="@+id/barraProgreso"
        style="?android:attr/progressBarStyleHorizontal"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTiempoTemporizar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/txtVistaTiempo"
        android:text="00:00:00"
        android:textColor="@color/colorAccent"
        android:inputType="time"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVistaTiempo"
            android:layout_centerInParent="true"
            android:text="00:00:00"
            android:textSize="30sp"
            android:textColor="@color/colorAccent"
            />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bttnEmpezarTemporizador"
        android:text="Comenzar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/barraProgreso"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimary"



        />



</RelativeLayout>