<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LyoutGaraje"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".perfil_usuario">

    <Space
        android:layout_width="match_parent"
        android:layout_height="64dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="209dp"
        app:srcCompat="@drawable/sin_t_tulo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Garaje de válvulas"
        android:textAlignment="center"
        android:textColor="#41A400"
        android:textStyle="bold"
        android:textSize="55dp"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="134dp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="54dp" />
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="IrRegistrarValvula"
        android:text="Agregar nueva válvula"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#41a400"/>


    <Space
        android:layout_width="match_parent"
        android:layout_height="64dp" />

    <HorizontalScrollView
        android:id="@+id/ContainerHorizontal"
        android:layout_width="match_parent"
        android:layout_height="46dp"/>

    <Button
        android:id="@+id/bttValcula1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/valvula"
        android:onClick="IrEstadoValvula"
        android:text=""
        android:visibility="invisible" />


</LinearLayout>