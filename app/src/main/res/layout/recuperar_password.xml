<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".RecuperarPasswordActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese su correo por favor"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="113dp" />

    <EditText
        android:id="@+id/txt_correo_recuperar"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:autofillHints=""
        android:gravity="center_horizontal"
        android:hint="Correo electrónico"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="142dp" />

    <Button
        android:id="@+id/btn_enviar_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar correo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="226dp"
        android:onClick="RecuperarContraseña"/>

    <TextView
        android:id="@+id/lbl_envio_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se ha enviado un email a su correo con  su contraseña."
        android:visibility="invisible"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="320dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>